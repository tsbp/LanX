<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/taho"
        android:background="@drawable/dros" />

    <ImageView
        android:id="@+id/taho"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/taho"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/gearButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/taho"
        android:background="@drawable/forward" />

    <ImageView
        android:id="@+id/steering"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/gearButton"
        android:src="@drawable/steering" />

    <ImageButton
        android:id="@+id/avar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="33dp"
        android:layout_toLeftOf="@+id/taho"
        android:background="@drawable/avaroff" />

    <Button
        android:id="@+id/horn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/avar"
        android:background="@drawable/hornbutton" />

    <ImageButton
        android:id="@+id/light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/lightoff" />

</RelativeLayout>