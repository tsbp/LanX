<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="oval" >
            <solid android:color="#00000000" />
            <stroke
                android:width="15dp"
                android:color="#ff999999" />
            <size
                android:height="200dp"
                android:width="200dp" />
        </shape>
    </item>
    <item
        android:bottom="90dp"
        android:left="2dp"
        android:right="2dp"
        android:top="90dp">
        <shape android:shape="rectangle"    >  
             <solid android:color="#ff999999" />          
        </shape>
    </item>
    <item
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp"
        android:top="50dp"        >
        <shape android:shape="oval"                >              
             <solid android:color="#ff999999" />          
        </shape>
    </item>
    
</layer-list>